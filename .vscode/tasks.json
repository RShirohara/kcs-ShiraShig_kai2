{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: index.html",
            "type": "process",
            "command": "pandoc",
            "args": [
                "-i", "${relativeFile}",
                "-o", "index.html",
                "-f", "markdown_phpextra+yaml_metadata_block+hard_line_breaks",
                "--filter", "script/pandoc-ddmarkdown.py",
                "-c", "source/style.css",
                "-s"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}